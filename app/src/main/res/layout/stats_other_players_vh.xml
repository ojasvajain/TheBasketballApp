<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="#FFFFFF"
                android:layout_height="wrap_content">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/iv_player_photo"
        android:src="@drawable/al_horford"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/default_text"
        android:textColor="#000000"
        android:id="@+id/tv_player_name"
        android:layout_marginLeft="125dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/default_text"
        android:id="@+id/tv_player_id"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_player_name"
        android:layout_toEndOf="@+id/tv_player_name"
        android:layout_marginLeft="81dp"
        android:visibility="invisible"
        android:layout_marginStart="81dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="32.2"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/tv_stat"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="PTS"
        android:textStyle="bold"
        android:id="@+id/tv_stat_label"
        android:textColor="#000000"
        android:layout_below="@+id/tv_stat"
        android:layout_alignRight="@+id/tv_stat"
        android:layout_alignEnd="@+id/tv_stat"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_logo"
        android:src="@drawable/chicago_bulls"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/iv_player_photo"
        android:layout_alignEnd="@+id/iv_player_photo"/>


</RelativeLayout>