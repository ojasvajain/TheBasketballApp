<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tv_plays_for_label"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="@string/plays_for"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/default_text"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:id="@+id/tv_plays_for"
        android:layout_below="@+id/tv_plays_for_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_plays_for"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/chicago_bulls_small"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:visibility="invisible"
        android:id="@+id/tv_team_id"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_plays_for"
        android:layout_toStartOf="@+id/iv_plays_for"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"/>


</RelativeLayout>