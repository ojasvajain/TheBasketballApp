<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="#FFFFFF"
              android:layout_height="wrap_content">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/iv_player_photo"
        android:src="@drawable/al_horford"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/default_text"
        android:textColor="#000000"
        android:id="@+id/tv_player_name"
        android:layout_marginLeft="125dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/default_text"
        android:layout_marginLeft="125dp"
        android:id="@+id/tv_player_position"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/iv_player_photo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/default_text"
        android:id="@+id/tv_player_id"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_player_name"
        android:layout_toEndOf="@+id/tv_player_name"
        android:layout_marginLeft="81dp"
        android:visibility="invisible"
        android:layout_marginStart="81dp"/>


</RelativeLayout>